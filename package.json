{
  "name": "mockpay",
  "version": "0.1.0",
  "description": "Local mock Paystack and Flutterwave servers for offline testing",
  "type": "module",
  "bin": {
    "mockpay": "dist/cli/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server/index.js",
    "dev": "tsx src/server/index.ts",
    "cli": "tsx src/cli/index.ts",
    "lint": "tsc -p tsconfig.json --noEmit",
    "postinstall": "npm --prefix template install && npm --prefix template run build || echo mockpay: skipped hosted-checkout postinstall build"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chronodb": "^1.0.0",
    "commander": "^11.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4"
  }
}
